{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "moduleResolution": "Node",
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitUseStrict": false,
    "strict": false,
    "target": "ES2015",
    "module": "ES2015",
    "outDir": "./src/script"
  },
  "include": [
    "./src/ts/**/*"
  ],
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ]
}